<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  名前:
<!--
  <%= f.text_field :name %>
  <input type="text" name="message[name]" id="message_name" />
-->
  <textarea name="message[name]" id="message_name" rows="1" cols="20"></textarea>

  内容:
<!--
  <%= f.text_field :body %>
  <input type="text" name="message[body]" id="message_body" />
  <input type="submit" name="commit" value="Create Message" />
-->
  <textarea name="message[body]" id="message_body" rows="1" cols="20"></textarea>
  <br>
  <%= f.submit class: "btn btn-sm btn-primary" %>

<% end %>